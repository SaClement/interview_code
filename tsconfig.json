{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "CommonJS",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "lib": ["es6", "DOM"]
  },
  "include": ["src/main.ts", "src/global.d.ts", "src/**/__test__","src/**/*.ts"],
  "exclude": []
}
